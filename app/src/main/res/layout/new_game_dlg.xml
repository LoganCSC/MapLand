<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_horizontal"
        android:text="@string/new_game_dlg_title"
        android:background="@color/title_bg_color"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="1,3">
        <TableRow>
            <TextView
                android:id="@+id/new_game_name_field"
                android:text="@string/new_game_name_field_txt"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/new_game_name_input"
                android:text="@string/new_game_name_txt"
                android:layout_span="2"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/new_game_num_players_txt"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:id="@+id/num_players_picker"
                />
            <TextView
                android:text="@string/new_game_players_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/new_game_duration_txt"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText android:id="@+id/num_hours_picker"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="number"
                      android:layout_span="2"
                      android:ems="10" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/new_game_region_value_inc_txt"
                android:layout_span="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:id="@+id/new_game_region_value_inc"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:text="@string/new_game_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/new_game_bounds"
                android:layout_span="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/bounds_nw_lat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText android:id="@+id/bounds_nw_lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                android:ems="10" />
            <TextView
                android:text="@string/bounds_nw_lng_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText android:id="@+id/bounds_nw_lng"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="number"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:ems="10" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/bounds_se_lat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText android:id="@+id/bounds_se_lat"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="number"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:ems="8" />
            <TextView
                android:text="@string/bounds_se_lng_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText android:id="@+id/bounds_se_lng"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="number"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:ems="10" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/new_game_notes_txt"
                android:layout_span="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/new_game_notes_input"
                android:text="@string/new_game_notes"
                android:inputType="textMultiLine"
                android:layout_span="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:gravity="top|left"
                android:maxLines="8"
                android:scrollbars="vertical" />
        </TableRow>
    </TableLayout>
</LinearLayout>